{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",

  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useNx": true, 
  "useWorkspaces": true,
  "version": "0.0.0",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/"
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": ["**/*.md"]
    }
  }
}