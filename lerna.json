{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useNx": true,
  "useWorkspaces": true,
  "version": "2.0.0",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/api-io"
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": ["**/*.md"]
    }
  }
}
